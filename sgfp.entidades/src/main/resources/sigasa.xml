<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.current_session_context_class">thread</property>        
        <property name="hibernate.connection.isolation">2</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sgfp?zeroDateTimeBehavior=convertToNull</property>
        <property name="hibernate.connection.username">root1</property>
        <property name="hibernate.connection.password">12345</property>
        
        <property name="c3p0.autoCommitOnClose">true</property>
        <property name="c3p0.acquire_increment">1</property>
        <property name="c3p0.initialPoolSize">5</property>
        <property name="c3p0.idle_test_period">100</property>
        
        <property name="c3p0.max_size">50</property>
        <property name="c3p0.max_statements">0</property>
        <property name="c3p0.min_size">5</property>
        <property name="c3p0.timeout">100</property>
            
        <mapping class="com.app.sgfp.entidades.Contacto"/>
        <mapping class="com.app.sgfp.entidades.Vivienda"/>
        <mapping class="com.app.sgfp.entidades.Usuario"/>
        <mapping class="com.app.sgfp.entidades.Instalaciones"/>
        <mapping class="com.app.sgfp.entidades.GestionGasto"/>
        <mapping class="com.app.sgfp.entidades.Reservacion"/>
        <mapping class="com.app.sgfp.entidades.RelConvenio"/>
        <mapping class="com.app.sgfp.entidades.Configuracion"/>
        <mapping class="com.app.sgfp.entidades.RelMantenimiento"/>
        <mapping class="com.app.sgfp.entidades.TipoInstalacion"/>
        
    </session-factory>
</hibernate-configuration>
